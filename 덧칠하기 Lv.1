class Solution {
    public int solution(int n, int m, int[] section) {  //n 벽 길이, m 롤러길이, section 페인트 칠하기로 한 영역 
        //section 오름차순 배열로 따로 정렬 안해줘도됨 
        //최소로 페인트칠을 하려면 롤러의 끝에 페인트 칠하기로 한 영역이 닿아야함 
        
        int answer = 0;
        int start = section[0];                            //페인트 칠하기로 한 첫번째 영역
        answer++; 

        for(int a : section){
            if(start + m > a){                            //시작점을 시작으로 롤러길이만큼 페인트 칠하며 이것을 반복 
                continue;
            }
            start = a;                                    //시작점을 기준으로 롤러 길이를 벗어나면 페인트 칠하기로 한 영역이 새로운 시작점이 됨 
            answer++;                                        
        }
        return answer;
    }
}
